        .fret.dimmed .note { opacity: 0.05; pointer-events: none; }

        /* Animation */
        .note.playing { animation: pulse 0.4s ease-out; filter: brightness(1.3); }
        @keyframes pulse {
            0% { box-shadow: 0 0 0 0 rgba(255, 255, 255, 0.7); transform: scale(1.1); }
            100% { box-shadow: 0 0 0 15px rgba(255, 255, 255, 0); transform: scale(1); }
        }

        /* Inlays */
