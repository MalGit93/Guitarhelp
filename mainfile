<script>
    // --- CONSTANTS ---
    const NOTES = ['C', 'C#', 'D', 'D#', 'E', 'F', 'F#', 'G', 'G#', 'A', 'A#', 'B'];
    const FLAT_NOTES = ['C', 'Db', 'D', 'Eb', 'E', 'F', 'Gb', 'G', 'Ab', 'A', 'Bb', 'B'];
    
    // Extended Interval Mapping
    const INTERVAL_MAP = {
        0: 'R', 1: 'b2', 2: '2', 3: 'b3', 4: '3', 5: '4', 6: 'b5', 7: '5', 8: 'b6', 9: '6', 10: 'b7', 11: '7'
    };

    const SCALES = {
        'Major (Ionian)': [0, 2, 4, 5, 7, 9, 11],
        'Minor (Aeolian)': [0, 2, 3, 5, 7, 8, 10],
        'Dorian': [0, 2, 3, 5, 7, 9, 10],
        'Phrygian': [0, 1, 3, 5, 7, 8, 10],
        'Lydian': [0, 2, 4, 6, 7, 9, 11],
        'Mixolydian': [0, 2, 4, 5, 7, 9, 10],
        'Locrian': [0, 1, 3, 5, 6, 8, 10],
        'Pentatonic Minor': [0, 3, 5, 7, 10],
        'Pentatonic Major': [0, 2, 4, 7, 9],
        'Blues': [0, 3, 5, 6, 7, 10],
        'Harmonic Minor': [0, 2, 3, 5, 7, 8, 11],
        'Melodic Minor': [0, 2, 3, 5, 7, 9, 11]
    };

    const CHORDS = {
        'Major Triad': [0, 4, 7],
        'Minor Triad': [0, 3, 7],
        'Augmented': [0, 4, 8],
        'Diminished': [0, 3, 6],
        'Maj7': [0, 4, 7, 11],
        'Dom7': [0, 4, 7, 10],
        'Min7': [0, 3, 7, 10],
        'm7b5': [0, 3, 6, 10],
        'dim7': [0, 3, 6, 9],
        'sus2': [0, 2, 7],
        'sus4': [0, 5, 7],
        'Add9': [0, 4, 7, 2],
        'm9': [0, 3, 7, 10, 2]
    };

    const TUNINGS = {
        'std': [4, 11, 7, 2, 9, 4], // E B G D A E
        'dropd': [4, 11, 7, 2, 9, 2], 
        'dadgad': [2, 9, 7, 2, 9, 2], 
        'eb': [3, 10, 6, 1, 8, 3],
        'dstd': [2, 9, 5, 0, 7, 2]
    };

    // --- STATE ---
    let state = {
        root: 9, // A
        mode: 'scale', 
        dynamicSelection: 'Major (Ionian)',
        tuning: 'std',
        filter: 'all', 
        zone: '0-18',
        display: 'notes', // notes vs intervals
        hand: 'right',
        spelling: 'sharp',
        labeling: 'note'
    };

    // --- ELEMENTS ---
    const fretboardEl = document.getElementById('fretboard');
    const labelsEl = document.getElementById('stringLabels');
    const theoryOut = document.getElementById('theoryOutput');
    const viewportWrapper = document.querySelector('.viewport-wrapper');
    const dynamicSelect = document.getElementById('dynamicSelect');
    const filterSelect = document.getElementById('filterSelect');
    const controlsPanel = document.getElementById('controlsPanel');

    let audioCtx = null;
    let playingSequence = false;

    // --- INIT ---
    function init() {
        populateRootSelect();
        updateDynamicSelectOptions(); // Populate Scales first
        setupListeners();
        renderBoard();
        
        // Mobile settings toggle
        document.getElementById('toggleControlsBtn').addEventListener('click', () => {
            controlsPanel.classList.toggle('collapsed');
        });
    }

    function populateRootSelect() {
        const rootSel = document.getElementById('rootSelect');
        NOTES.forEach((n, i) => {
            const opt = document.createElement('option');
            opt.value = i;
            opt.text = n;
            rootSel.appendChild(opt);
        });
        rootSel.value = state.root;
    }

    function setupListeners() {
        // Dropdowns
        const map = {
            'rootSelect': 'root', 'tuningSelect': 'tuning', 'zoneSelect': 'zone'
        };
        
        for (let id in map) {
            document.getElementById(id).addEventListener('change', (e) => {
                state[map[id]] = (id === 'rootSelect') ? parseInt(e.target.value) : e.target.value;
                renderBoard();
            });
        }

        document.getElementById('modeSelect').addEventListener('change', (e) => {
            state.mode = e.target.value;
            updateDynamicSelectOptions();
            renderBoard();
        });

        dynamicSelect.addEventListener('change', (e) => {
            state.dynamicSelection = e.target.value;
            updateFilterOptions();
            renderBoard();
        });

        filterSelect.addEventListener('change', (e) => {
            state.filter = e.target.value;
            renderBoard();
        });

        // Toggles
        setupToggle('displayNote', 'displayInterval', 'display', 'notes', 'intervals');
        setupToggle('spellingSharp', 'spellingFlat', 'spelling', 'sharp', 'flat');
        setupToggle('labelNote', 'labelNumber', 'labeling', 'note', 'number');
        setupToggle('handRight', 'handLeft', 'hand', 'right', 'left');

        // Scroll
        document.getElementById('scrollLeftBtn').addEventListener('click', () => {
            viewportWrapper.scrollBy({ left: -200, behavior: 'smooth' });
        });
        document.getElementById('scrollRightBtn').addEventListener('click', () => {
            viewportWrapper.scrollBy({ left: 200, behavior: 'smooth' });
        });

        // Audio
        document.getElementById('playArpeggioBtn').addEventListener('click', playVisibleArpeggio);
    }

    function setupToggle(idA, idB, stateKey, valA, valB) {
        document.getElementById(idA).addEventListener('click', () => {
            state[stateKey] = valA;
            updateToggleUI(idA, idB, true);
            renderBoard();
        });
        document.getElementById(idB).addEventListener('click', () => {
            state[stateKey] = valB;
            updateToggleUI(idA, idB, false);
            renderBoard();
        });
    }

    function updateToggleUI(idA, idB, isA) {
        document.getElementById(idA).classList.toggle('active', isA);
        document.getElementById(idB).classList.toggle('active', !isA);
    }

    function updateDynamicSelectOptions() {
        dynamicSelect.innerHTML = '';
        const source = state.mode === 'scale' ? SCALES : CHORDS;
        for (let key in source) {
            dynamicSelect.add(new Option(key, key));
        }
        // Restore previous if possible, else default
        if (source[state.dynamicSelection]) {
            dynamicSelect.value = state.dynamicSelection;
        } else {
            state.dynamicSelection = dynamicSelect.options[0].value;
        }
        
        document.getElementById('dynamicLabel').innerText = state.mode === 'scale' ? 'Scale / Mode' : 'Chord Type';
        updateFilterOptions();
    }

    function updateFilterOptions() {
        filterSelect.innerHTML = '';
        if (state.mode === 'scale') {
            filterSelect.add(new Option('Full Scale', 'all'));
            filterSelect.add(new Option('Triads Only (1-3-5)', 'triad'));
            filterSelect.add(new Option('7th Arpeggios', '7th'));
            filterSelect.disabled = false;
        } else {
            filterSelect.add(new Option('Chord Tones', 'all'));
            filterSelect.disabled = true; // No point filtering a chord definition
        }
        state.filter = filterSelect.value;
    }

    // --- RENDER LOGIC ---

    function renderBoard() {
        fretboardEl.innerHTML = '';
        labelsEl.innerHTML = '';

        fretboardEl.classList.toggle('lefty', state.hand === 'left');

        const currentTuning = TUNINGS[state.tuning];
        const sourceData = state.mode === 'scale' ? SCALES : CHORDS;
        let intervals = sourceData[state.dynamicSelection] || [];

        // Apply Filter (Scale mode only)
        if (state.mode === 'scale') {
            if (state.filter === 'triad') intervals = intervals.filter(i => [0,3,4,7].includes(i));
            if (state.filter === '7th') intervals = intervals.filter(i => [0,3,4,7,10,11].includes(i));
        }

        const [minFret, maxFret] = state.zone.split('-').map(Number);
        const MAX_FRETS = 18;

        // Render Strings
        currentTuning.forEach((openNote, strIdx) => {
            const stringNum = strIdx + 1; // 1 to 6
            
            // Label
            const labelDiv = document.createElement('div');
            labelDiv.className = 'string-name';
            const noteName = getNoteLabel(openNote);
            labelDiv.innerText = state.labeling === 'note' ? noteName : stringNum;
            // Correct string numbering visual: Top is string 1 (High E) in array index 0?
            // Wait, TUNING array is E(4) B(3) ... so index 0 is high E (string 1).
            // Visual text: Note or Number.
            labelsEl.appendChild(labelDiv);

            // String Line
            const strDiv = document.createElement('div');
            strDiv.className = 'string';
            strDiv.style.setProperty('--thickness', `${1 + (strIdx * 0.5)}px`);

            // Frets
            for (let f = 0; f <= MAX_FRETS; f++) {
                const fretDiv = document.createElement('div');
                fretDiv.className = 'fret';
                if (f < minFret || f > maxFret) fretDiv.classList.add('dimmed');

                // Inlays
                if (strIdx === 2) {
                     if([3,5,7,9,15,17].includes(f)) addInlay(fretDiv);
                     if(f === 12) { addInlay(fretDiv, 'double-inlay'); addInlay(fretDiv, 'double-inlay-2'); }
                }

                // Calculate Note
                const noteVal = (openNote + f) % 12;
                const interval = (noteVal - state.root + 12) % 12;

                if (intervals.includes(interval)) {
                    const noteDiv = document.createElement('div');
                    noteDiv.className = `note visible ${getIntervalClass(interval)}`;
                    noteDiv.dataset.fret = f;
                    noteDiv.dataset.string = strIdx;

                    const content = state.display === 'notes' ? getNoteLabel(noteVal) : getIntervalLabel(interval);
                    noteDiv.innerText = content;

                    noteDiv.addEventListener('mousedown', (e) => {
                        e.stopPropagation();
                        triggerNote(f, strIdx, noteDiv);
                    });

                    fretDiv.appendChild(noteDiv);
                }
                strDiv.appendChild(fretDiv);
            }
            fretboardEl.appendChild(strDiv);
        });

        // Number Row
        renderNumberRow(minFret, maxFret, MAX_FRETS);
        
        // Info Text
        updateInfoBar(intervals);
        
        // Reset scroll only on major changes, simpler to just allow user to scroll
        // viewportWrapper.scrollLeft = 0; 
    }

    function addInlay(parent, cls = 'inlay') {
        const d = document.createElement('div');
        d.className = cls;
        parent.appendChild(d);
    }

    function renderNumberRow(min, max, total) {
        const row = document.createElement('div');
        row.className = 'number-row';
        
        const nut = document.createElement('div');
        nut.className = 'fret-number nut';
        nut.innerText = '0';
        row.appendChild(nut);

        for(let i=1; i<=total; i++) {
            const d = document.createElement('div');
            d.className = 'fret-number';
            d.innerText = i;
            if ([3,5,7,9,12,15,17].includes(i)) d.classList.add('marker');
            if (i < min || i > max) d.style.opacity = '0.2';
            row.appendChild(d);
        }
        fretboardEl.appendChild(row);
    }

    function updateInfoBar(intervals) {
        const rootName = getNoteLabel(state.root);
        const name = `${rootName} ${state.dynamicSelection}`;
        const detail = state.mode === 'scale' && state.filter !== 'all' ? ` (${state.filter}s)` : '';
        
        let struct = intervals.map(i => INTERVAL_MAP[i] || 'Ext').join(' - ');
        
        theoryOut.innerHTML = `
            <strong style="font-size:1.1rem; color:white">${name}${detail}</strong><br>
            <span style="color:#888">${struct}</span>
        `;
    }

    // --- HELPERS ---
    function getNoteLabel(val) {
        return state.spelling === 'sharp' ? NOTES[val] : FLAT_NOTES[val];
    }

    function getIntervalLabel(i) {
        // Special case for Add9 or 9ths if we want to be fancy, but simple map is safer
        return INTERVAL_MAP[i] || '?';
    }

    function getIntervalClass(i) {
        if (i === 0) return 'int-R';
        if ([3,4].includes(i)) return 'int-3';
        if ([6,7,8].includes(i)) return 'int-5';
        if ([10,11].includes(i)) return 'int-7';
        return 'int-other';
    }

    // --- AUDIO ---
    function triggerNote(fret, strIdx, el) {
        playTone(fret, strIdx);
        if(el) {
            el.classList.remove('playing');
            void el.offsetWidth; // reflow
            el.classList.add('playing');
        }
    }

    function playTone(fret, strIdx) {
        if (!window.AudioContext && !window.webkitAudioContext) return;
        if (!audioCtx) audioCtx = new (window.AudioContext || window.webkitAudioContext)();

        // Base freq for strings 0-5 (High E -> Low E)
        // High E4 = 329.63
        const bases = [329.63, 246.94, 196.00, 146.83, 110.00, 82.41];
        
        // Adjust for tuning
        const std = [4, 11, 7, 2, 9, 4]; // E B G D A E notes
        const cur = TUNINGS[state.tuning];
        
        // Calculate semitone shift from standard
        const shift = cur[strIdx] - std[strIdx];
        
        let freq = bases[strIdx] * Math.pow(2, shift/12);
        freq = freq * Math.pow(2, fret/12);

        const osc = audioCtx.createOscillator();
        const gain = audioCtx.createGain();
        
        osc.type = 'triangle'; // Softer than sawtooth
        osc.frequency.setValueAtTime(freq, audioCtx.currentTime);
        
        // Envelope
        const t = audioCtx.currentTime;
        gain.gain.setValueAtTime(0, t);
        gain.gain.linearRampToValueAtTime(0.2, t + 0.02);
        gain.gain.exponentialRampToValueAtTime(0.001, t + 1.0);

        osc.connect(gain);
        gain.connect(audioCtx.destination);
        osc.start(t);
        osc.stop(t + 1.0);
    }

    async function playVisibleArpeggio() {
        if (playingSequence) return;
        playingSequence = true;
        const btn = document.getElementById('playArpeggioBtn');
        btn.disabled = true;

        // Collect visible notes sorted by pitch (low string -> high string, low fret -> high fret)
        // Actually, guitar pitch is Low String (idx 5) to High String (idx 0)
        // But let's just scan strings 5 down to 0, frets min to max
        
        const [min, max] = state.zone.split('-').map(Number);
        
        // Collect all note elements
        let targets = [];
        
        // Iterate strings Low (5) to High (0)
        for (let s = 5; s >= 0; s--) {
            // Find notes on this string within zone
            // We need to query DOM or reconstruct. Simpler to query DOM.
            // But DOM order is High E first.
            // Let's grab all .note.visible
            // Filter by string index 's'
        }
        
        // Easier approach: Get all .note.visible, sort them by string (desc) then fret (asc)
        const notes = Array.from(document.querySelectorAll('.note.visible'))
            .filter(n => {
                const f = parseInt(n.dataset.fret);
                return f >= min && f <= max;
            });
        
        // Sort: String 5 (Low E) is highest index but lowest pitch base. 
        // We want 5, then 4...
        notes.sort((a, b) => {
            const sA = parseInt(a.dataset.string);
            const sB = parseInt(b.dataset.string);
            const fA = parseInt(a.dataset.fret);
            const fB = parseInt(b.dataset.fret);
            
            // Primary sort: String (Descending 5->0)
            if (sA !== sB) return sB - sA; 
            // Secondary sort: Fret (Ascending)
            return fA - fB;
        });
        
        // Limit to prevent long wait
        const toPlay = notes.slice(0, 16); 

        for (let note of toPlay) {
            const s = parseInt(note.dataset.string);
            const f = parseInt(note.dataset.fret);
            triggerNote(f, s, note);
            await new Promise(r => setTimeout(r, 150));
        }

        btn.disabled = false;
        playingSequence = false;
    }

    init();

</script>
</body>
</html>
